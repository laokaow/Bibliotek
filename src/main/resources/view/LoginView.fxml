<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController"

      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="400"
      style="-fx-padding: 40; -fx-background-color: white;">
    <Label text="Logga in" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TextField fx:id="txtEmail" promptText="E-post" prefWidth="300"/>
    <PasswordField fx:id="txtPinCode" promptText="PIN-kod" prefWidth="300"/>

    <Button fx:id="btnLogin" text="Logga in" prefWidth="300"/>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Har du inget konto?" />
        <Hyperlink fx:id="linkToRegister" text="Registrera dig" />
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Hemknapp"/>
        <fx:include source="/view/HomeButton.fxml" />
    </HBox>
</VBox>